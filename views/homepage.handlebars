{{#each posts as |post| }}
<div class="card col-lg-12">
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-lg-12">
        <div class="card-body">
          <p class="card=text" id="cardcontent">{{post.content}}</p>
          <p class="card-text" id="cardDate">
            <small>By:{{post.title}}</small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}



